---
cluster: "fox"

form:
  - auto_accounts
  - ec_mail_on_start
  - bc_num_hours
  - cryosparc_version
  - cryosparc_license
  - cryosparc_user_password
  - ec_mem
  - ec_cpus
  - custom_reservation

attributes:

  auto_accounts:
          label: "Choose the Educloud project:"
          help: |
                  <small>If you are unsure, ask the project principal</small>

  ec_mail_on_start:
    label: "Send e-mail when session starts"
    widget: "check_box"
    value: false
    help: |
      <small>Using the e-mail your account is registered to</small>

  ec_cpus:
    label: "Number of CPU cores:"
    widget: "number_field"
    value: "4"
    required: true
    help: |
      <small>The default value (4) should be sufficient</small>

  ec_mem:
    label: "RAM (in GB):"
    value: "16"
    widget: "number_field"
    required: true
    help: |
      <small>The default value (16) should be sufficient</small>

  cryosparc_version:
    label: "CryoSPARC version:"
    widget: "select"
    options:
      - [ "4.7.1", "4.7.1" ]

  cryosparc_license:
    widget: text_field
    placeholder: "xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx"
    pattern: "^[\\w]{8}-[\\w]{4}-[\\w]{4}-[\\w]{4}-[\\w]{12}$"
    label: "CryoSPARC license ID"
    required: true
    help: |
      Enter a password to use for this CryoSPARC session. Your CryoSPARC user name will be your Educloud user name.

  cryosparc_user_password:
    label: "CryoSPARC password"
    widget: text_field
    help: |
      Enter a password to use for this CryoSPARC session. Your CryoSPARC user name will be your Educloud user name.

  bc_num_hours:
    label: "Runtime (in hours) (required)"
    widget: "number_field"
    required: true
    value: "12"
    help: |
      <small>Specify a value larger than the expected runtime of all jobs (including waiting in queue)</small>

  custom_reservation:
    label: Reservation (Optional)
    widget: text_field
    help: |
      Use this if you have an active reservation and would like to use it to run your job. (--reservation)
